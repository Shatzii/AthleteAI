# AthleteAI Staging Environment Configuration
# Copy this file to .env.staging and fill in the actual values

# Application
NODE_ENV=staging
PORT=5000

# Database
MONGO_URI=mongodb://mongo-staging:27017/athleteai_staging
REDIS_URL=redis://redis-staging:6379

# Authentication
JWT_SECRET=your-super-secure-jwt-secret-for-staging
JWT_EXPIRE=7d

# External APIs (Optional - features will be disabled if not provided)
GOOGLE_AI_API_KEY=your-google-ai-api-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# Google Cloud (for speech recognition)
GOOGLE_CLOUD_SPEECH_CREDENTIALS={"type":"service_account","project_id":"..."}

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=info

# Monitoring
SENTRY_DSN=your-sentry-dsn-for-staging
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Cache
CACHE_TTL=3600

# CORS
CORS_ORIGIN=http://localhost:3001

# SSL (for production staging with SSL)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem