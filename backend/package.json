{
  "name": "go4it-server",
  "version": "1.0.0",
  "description": "Backend for the Go4It Sports Platform",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "cross-env NODE_ENV=test jest",
    "test:logging": "cross-env NODE_ENV=test jest tests/logging.test.js",
    "test:auth": "cross-env NODE_ENV=test jest tests/auth.test.js",
    "test:players": "cross-env NODE_ENV=test jest tests/players.test.js",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "seed:cms": "node seedCMS.js",
    "build": "mkdir -p dist && cp *.js dist/ && cp -r models dist/ && cp -r routes dist/ && cp -r controllers dist/ && cp -r middleware dist/ && cp -r config dist/",
    "db:migrate": "node dist/migrate.js",
    "logs:check": "tail -f logs/combined.log",
    "logs:errors": "tail -f logs/error.log"
  },
  "dependencies": {
    "@sentry/node": "^10.8.0",
    "@sentry/profiling-node": "^10.8.0",
    "@sentry/tracing": "^7.120.4",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.11.0",
    "bcrypt": "^5.1.0",
    "bcryptjs": "^3.0.2",
    "canvas": "^3.2.0",
    "cheerio": "^1.1.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-rate-limit": "^8.0.1",
    "express-redis-cache": "^1.1.3",
    "express-session": "^1.18.2",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.0",
    "multer": "^2.0.2",
    "newrelic": "^9.0.0",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "redis": "^5.8.2",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "jest": "^30.1.2",
    "mongodb-memory-server": "^10.2.0",
    "nodemon": "^2.0.4",
    "supertest": "^7.1.4"
  },
  "author": "Your Name",
  "license": "MIT"
}
